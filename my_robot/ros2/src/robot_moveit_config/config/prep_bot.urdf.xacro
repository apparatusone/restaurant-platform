<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="prep_bot">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import prep_bot urdf file -->
    <xacro:include filename="$(find prep_bot)/urdf/robot.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="prep_bot.ros2_control.xacro" />


    <xacro:prep_bot_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
